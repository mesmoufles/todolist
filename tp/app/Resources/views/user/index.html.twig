{% extends 'base.html.twig' %}

{% block body %}
    <header>
        <h1>User List</h1>
        <nav>
            <ul>
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="{{ path('user_new') }}">New user</a>
                </li>

            </ul>
        </nav>
    </header>
<div class="general-wrapper">
<div id="users">
    <div class="filter-container">

    <input class="search" placeholder="Search" />
    <button class="sort" data-sort="lastname">
        Sort by lastname
    </button>
    <button class="sort" data-sort="firstname">
        Sort by firstname
    </button>
    </div>
    <div class="users-container">

    <table id="table_format" class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="list">
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td class="lastname">{{ user.lastname }}</td>
                <td class="firstname">{{ user.firstname }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">Details</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">Edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
</div>



{% endblock %}
