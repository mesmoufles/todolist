{% extends 'base.html.twig' %}

{% block body %}
    <header>
        <h1>User details</h1>
        <nav>
            <ul>
                <li>
                    <a href="{{ path('user_index') }}">Back to list</a>
                </li>
                <li>
                    <a href="{{ path('user_edit', { 'id': user.id }) }}">Edit</a>
                </li>
            </ul>
        </nav>
    </header>


    <div class="main">
        <div class="details-container">
            <table>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Lastname</th>
                    <td>{{ user.lastname }}</td>
                </tr>
                <tr>
                    <th>Firstname</th>
                    <td>{{ user.firstname }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="delete-container">

            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" id="task-delete-submit">
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock %}
